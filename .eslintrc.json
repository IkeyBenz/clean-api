{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "google",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "prettier/prettier": ["error", {
      "singleQuote": true
    }]
  },
  "overrides": [
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
